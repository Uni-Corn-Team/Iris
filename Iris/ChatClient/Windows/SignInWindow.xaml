<Window x:Class="ChatClient.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="SignIn" Height="450" Width="800">
    <Grid>
        <Label x:Name="lSignIn" Content="Sign in" HorizontalAlignment="Left" Margin="244,55,0,0" VerticalAlignment="Top" Width="214" Height="25"/>
        <Button x:Name="bSignIn" Content="Sign in" Click="Button_Click" HorizontalAlignment="Left" Height="42" Margin="244,192,0,0" VerticalAlignment="Top" Width="184"/>
        <TextBox x:Name="tbNickname" Height="22" Margin="244,104,428,0" TextWrapping="Wrap" Text="Nickname" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbPassword" Height="22" Margin="244,146,428,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="bSignUp" Content="Sign up" Click="Button_Click" HorizontalAlignment="Left" Height="42" Margin="244,254,0,0" VerticalAlignment="Top" Width="184"/>

    </Grid>
</Window>
