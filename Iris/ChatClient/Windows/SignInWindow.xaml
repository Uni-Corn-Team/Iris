<Window x:Class="ChatClient.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="SignIn" Height="450" Width="350">
    <Grid>
        <Label x:Name="lSignIn" Content="     Sign in" HorizontalAlignment="Left" Margin="100,55,0,0" VerticalAlignment="Top" Width="120" Height="30" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="bSignIn" Content="Sign in" Click="Button_Click_SignIn" HorizontalAlignment="Left" Height="42" Margin="100,192,0,0" VerticalAlignment="Top" Width="120"/>

        <Button x:Name="bSignUp" Content="Sign up" Click="Button_Click_SignUp" HorizontalAlignment="Left" Height="42" Margin="100,254,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbNickname" HorizontalAlignment="Left" Height="23" Margin="104,105,0,0" TextWrapping="Wrap" Text="Nickname" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbPassword" HorizontalAlignment="Left" Height="23" Margin="104,150,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
