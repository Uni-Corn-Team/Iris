<Window x:Class="ChatClient.Windows.CreateChat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient.Windows"
        mc:Ignorable="d"
        Title="CreateChat" Height="450" Width="350">
    <Grid>
        <TextBox  Name ="tbChatName"
                  HorizontalAlignment="Left" Height="25" Margin="112,143,0,0" 
                  TextWrapping="Wrap" Text=""
                  VerticalAlignment="Top" Width="120"/>
        <Label Content="Name of chat" HorizontalAlignment="Left" Margin="114,107,0,0" VerticalAlignment="Top"/>
        <Button Content="Create chat" Click="ButtonClickAddChat" HorizontalAlignment="Left" Margin="111,198,0,0" VerticalAlignment="Top" Width="124" RenderTransformOrigin="-0.885,-1.66" Height="50"/>
    </Grid>
</Window>
