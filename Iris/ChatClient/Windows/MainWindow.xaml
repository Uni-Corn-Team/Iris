<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lbDialogs" SelectionChanged="Selection_Dialog" Height="248" Margin="75,45,567,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="0.293,0.577"/>
        <ListBox x:Name="lbCurrentDialog" Height="230" Margin="294,78,0,0" VerticalAlignment="Top" Width="450"/>
        <TextBox x:Name="tbMessage" Height="46" Margin="293,322,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="349"/>
        <Button x:Name="bSendMessage" Click="Button_Click_SendMessage" Content="Send" HorizontalAlignment="Left" Height="46" Margin="647,322,0,0" VerticalAlignment="Top" Width="97"/>
        <Button x:Name="bNewDialog" Content="New dialog" HorizontalAlignment="Left" Height="44" Margin="80,324,0,0" VerticalAlignment="Top" Width="145"/>
    </Grid>
</Window>
